/* components/mp-waterfall/index.wxss */
.unloaded-items {
  position: fixed;
  left: -9999rpx;
  right: -9999rpx;
  opacity: 0;
  width: 49%;
}
.waterfall {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}
.waterfall-shadow{
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  visibility: hidden;
  height: 0;
  overflow: hidden;
}
.col {
  width: 1rem;
  flex: 1 1 auto;
}
.col:last-child{
  margin-right: 0!important;
}
